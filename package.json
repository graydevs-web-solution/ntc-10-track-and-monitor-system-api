{
  "name": "monitoring-system-api",
  "version": "1.10.0",
  "description": "Monitoring system for NTC Region 10",
  "main": "index.js",
  "scripts": {
    "start": "node dist/index.ts",
    "dev": "nodemon --exec ts-node src/index.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "npm run clean && tsc -p . && npm run copy-files && npm run copy-prisma-seed",
    "install-build": "npm install && npm run clean && tsc -p . && npm run copy-files && npm run copy-prisma-seed",
    "clean": "rimraf dist/",
    "copy-prisma-seed": "copyfiles -u 1 prisma/seed.ts dist/prisma",
    "copy-files": "copyfiles -u 1 src/pdf/*.pdf dist/"
  },
  "author": "Woodford Nono",
  "license": "ISC",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.12",
    "@types/helmet": "^4.0.0",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/luxon": "^1.27.0",
    "@types/mongoose": "^5.11.97",
    "@types/mongoose-unique-validator": "^1.0.5",
    "@types/node": "^15.14.9",
    "@types/pino": "^6.3.12",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "copyfiles": "^2.4.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-promise": "^5.2.0",
    "husky": "^6.0.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.3",
    "prisma": "^4.3.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.5.0",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "@prisma/client": "^4.3.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.2",
    "helmet": "^4.6.0",
    "joi": "^17.6.0",
    "jsonwebtoken": "^8.5.1",
    "luxon": "^1.28.0",
    "mongoose": "^5.13.14",
    "mongoose-unique-validator": "^2.0.3",
    "pdf-lib": "^1.17.1",
    "pg": "^8.7.3",
    "pino": "^6.14.0",
    "pino-pretty": "^5.1.3",
    "rand-token": "^1.0.1",
    "uuid": "^8.3.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
  }
}
